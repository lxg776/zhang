/**index.wxss**/

.item-view{
  width: 100%;
  height: 368rpx;
  position: relative;
  background: #fff;

    border: none;
    background-size: 100% 1px;
    background-repeat: no-repeat;
    background-position: bottom;
    background-image: linear-gradient(0,#dddddd,#dddddd 50%,transparent 50%);
    background-image: -webkit-linear-gradient(90deg,#dddddd,#dddddd 50%,transparent 50%);

}

.item-img{
  width: 260rpx;
  height: 260rpx;
  position: absolute;
  top: 32rpx;
  left: 32rpx;
}

.item-buttom-view{
  
  position: absolute;
  top: 288rpx;
  width: 100%;
  height: 40px;
}

.item-buttom-button{
  width: 160rpx;
  height: 30rpx;
  font-size: 30rpx;
  margin: 8rpx;
  text-align: center;
  line-height: 30rpx;
  color: #0062cc;
 
 
}

.item-t1-view{
  
  position: absolute;
  top: 32rpx;
  left: 300rpx;
  width: 450rpx;
  height: 50rpx;
}

.item-t2-view{
  
  position: absolute;
  top: 80rpx;
  left: 300rpx;
  width: 450rpx;
  height: 50rpx;
}

.item-t3-view{
  
  position: absolute;
  top: 130rpx;
  left: 300rpx;
  width: 450rpx;
  height: auto;
}

.text-readname{
  font-size: 24rpx;
  color: #259b24;
}

.text-info{
  font-size: 32rpx;
  color: #757575;
}

.rerefresh-view
{
  position: fixed;
  right: 40rpx;
  bottom:80rpx;
  width: 64px;
  height: 64px;
  
}



.rerefresh-img
{
  width: 64px;
  height: 64px;
  
  position: absolute;
  top: 0px;
  left: 0px;
 
}
.rerefresh-btn{
  position: relative;

}

.rotateAnimation{
     animation: rotateAnimation 4s  ease-in-out;
}

@keyframes rotateAnimation {
    from  {
     transform:  rotate(0deg);
    }
     to  {
     transform:  rotate(1440deg);
    }

  


   
}


