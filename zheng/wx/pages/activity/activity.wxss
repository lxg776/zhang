.activity-div{
  width: 100%;
  min-height: 760px;
  display: block;
  flex-direction: row;
  margin-bottom:0.75rem;
}

.item{
    width: 100%;
    height: fit-content;
    background: #fff;
   
   

}

.item-img{
    width: 100%;
    display: block;
}

.text-div{
    position: relative;
    min-height: 60rpx;
    padding: 0.5rem 0.75rem;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}

